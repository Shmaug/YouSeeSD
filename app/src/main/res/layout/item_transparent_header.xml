<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <com.mikepenz.iconics.view.IconicsImageView
        android:id="@+id/card_location_header"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:background="@color/white_translucent_70" />

    <View
        android:id="@+id/ghost_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/card_location_header" />

    <View
        android:id="@+id/round_view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_above="@id/ghost_view"
        android:background="@drawable/bg_top_radius" />

    <com.mikepenz.iconics.view.IconicsTextView
        android:id="@+id/confirm_locations_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/round_view"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="15dp"
        android:text="Are you ready to enjoy 58 mins?"
        android:textColor="@color/dark_gray"
        android:textSize="17sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_below="@id/confirm_locations_title"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@color/light_gray" />

</RelativeLayout>