<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_tour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false"
        app:contentPadding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <com.mikepenz.iconics.view.IconicsImageView
                android:id="@+id/card_tour_img"
                android:layout_width="match_parent"
                android:background="@color/light_gray"
                android:layout_height="184dp"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="16dp">

            <TextView
                    android:id="@+id/card_tour_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Cafe Badilico"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start"
                    android:textColor="@color/black"
                    android:textSize="24dp"/>

            <com.mikepenz.iconics.view.IconicsImageView
                    android:id="@+id/card_tour_menu"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <com.mikepenz.iconics.view.IconicsTextView
                android:id="@+id/card_tour_eta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="20dp"
                android:gravity="start|center_vertical"
                android:textSize="12dp"
                android:text="1hour 30min"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="14dp"
                android:textSize="16dp"
                android:textColor="@color/dark_gray"
                android:text="Tour Summary"/>

        <TextView
                android:id="@+id/card_tour_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when"
                android:textSize="14dp"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/light_gray"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>

        <TextView
                android:id="@+id/tour_tag_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="14dp"
                android:textSize="16dp"
                android:textColor="@color/dark_gray"
                android:text="Tour Tags"/>

        <com.nex3z.flowlayout.FlowLayout
                android:id="@+id/tour_tags_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:flChildSpacing="auto"
                app:flChildSpacingForLastRow="align"
                app:flRowSpacing="8dp">
        </com.nex3z.flowlayout.FlowLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

