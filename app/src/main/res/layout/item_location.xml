<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <com.mikepenz.iconics.view.IconicsImageView
        android:id="@+id/card_location_img"
        android:layout_width="60dp"
        android:layout_height="78dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/card_location_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/location_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Geisel Library"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location_card_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="short description goes here"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>