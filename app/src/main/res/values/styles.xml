<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EndTourButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/material_red</item>
    </style>

    <style name="LoginButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="backgroundTint">@color/white</item>
        <item name="rippleColor">@color/dark_gray</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="TagChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="rippleColor">@color/primaryColor</item>
    </style>

</resources>
